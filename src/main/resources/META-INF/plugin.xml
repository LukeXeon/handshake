<idea-plugin>
    <id>com.guet.flexbox.handshake</id>
    <name>handshake</name>
    <version>1.0</version>
    <vendor email="imlkluo@qq.com" url="https://github.com/sanyuankexie/Gbox">sanyuankexie</vendor>

    <description><![CDATA[
      🚀基于Litho的Android高性能动态业务容器，解决首页动态化的痛点。在Apache 2.0开源协议下发布，是一个完全基于开源软件实现的开源软件。
    ]]></description>

    <change-notes><![CDATA[
      🚀基于Litho的Android高性能动态业务容器，解决首页动态化的痛点。在Apache 2.0开源协议下发布，是一个完全基于开源软件实现的开源软件。
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="173.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="com.guet.flexbox.handshake.new"
                class="com.guet.flexbox.handshake.NewFlexmlAction"
                text="Flexml File"
                description="新建flexml dsl文件">
            <add-to-group group-id="NewGroup" anchor="before" relative-to-action="NewFile"/>
        </action>
    </actions>

    <depends>com.intellij.modules.xml</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>com.intellij.modules.json</depends>

    <extensions defaultExtensionNs="com.intellij">
        <configurationType implementation="com.guet.flexbox.handshake.FlexmlMockConfigurationType"/>
        <internalFileTemplate name="flexml_file"/>
        <completion.contributor
                language="XML"
                implementationClass="com.guet.flexbox.handshake.FlexmlCompletionContributor"/>
        <fileTypeFactory implementation="com.guet.flexbox.handshake.FlexmlFileTypeFactory"/>
        <xml.tagNameProvider implementation="com.guet.flexbox.handshake.FlexmlTagNameProvider"/>
    </extensions>
</idea-plugin>